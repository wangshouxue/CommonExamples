<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.wsx.mydemo.MarqueeTextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        app:isMarquee="true"
        app:orientation="1"
        app:run_speed="10"
        app:stay_time="1000"
        android:text="美好的希望虽然去年秋天去过一次，花开季节还是忍不住又来了。美好的希望虽然去年秋天去过一次，花开季节还是忍不住又来了end。\n"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.wsx.mydemo.GradientColorButton
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:text="button"/>
    <com.wsx.mydemo.BubbleImageView
        android:layout_width="100dip"
        android:layout_height="120dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/img"
        app:direction="left"
        app:rect_radius="5dip"
        app:triangle_height="14dip"
        app:triangle_marginTop="15dip"
        app:triangle_width="7dip"
        app:shadow_color="@color/shadow_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>